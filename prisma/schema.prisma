generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Usuários (alunos)
model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  phone     String?
  password  String
  role      String   @default("student")
  createdAt DateTime @default(now())
  mentorProfile Mentor?
  appointments  Appointment[]
}

// Mentores
model Mentor {
  id           Int      @id @default(autoincrement())
  user         User     @relation(fields: [userId], references: [id])
  userId       Int      @unique
  bio          String? 
  subjects     Subject[] @relation("MentorSubjects")
  schedules    Schedule[]
  appointments Appointment[]
}

// Matérias
model Subject {
  id      Int      @id @default(autoincrement())
  name    String   @unique
  mentors Mentor[] @relation("MentorSubjects")

  Appointment Appointment[]
}

// Horários disponíveis para cada mentor
model Schedule {
  id        Int      @id @default(autoincrement())
  mentor    Mentor   @relation(fields: [mentorId], references: [id])
  mentorId  Int
  day       String
  startTime String
  endTime   String
  status    String   @default("available")

  appointments Appointment[]

  @@unique([mentorId, day, startTime, endTime]) // <-- evita duplicados
}

// Reservas de mentorias
model Appointment {
  id         Int      @id @default(autoincrement())
  student    User     @relation(fields: [studentId], references: [id])
  studentId  Int

  mentor     Mentor   @relation(fields: [mentorId], references: [id])
  mentorId   Int

  subject    Subject  @relation(fields: [subjectId], references: [id])
  subjectId  Int

  schedule   Schedule @relation(fields: [scheduleId], references: [id])
  scheduleId Int

  status     String   @default("pending") // pending, confirmed, canceled
  createdAt  DateTime @default(now())
  notes      String?

  payment    Payment?

  @@unique([scheduleId, studentId])
}

model Payment {
  id            Int         @id @default(autoincrement())
  appointment   Appointment @relation(fields: [appointmentId], references: [id])
  appointmentId Int         @unique

  provider      String      @default("mercadopago")
providerId      String      @unique
  status        String      @default("pending") // pending, approved, rejected
  amount        Float
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}
